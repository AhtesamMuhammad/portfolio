---
interface Props {
  title: string;
  date: string;
  description: string;
  company: string;
}

const { title, date, description, company } = Astro.props;
---

<li class="mb-10 ms-4 flex gap-4 flex-col sm:flex-row">
  <div class="flex-none w-44">
    <div
      class="absolute w-3 h-3 bg-orange-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <h3 class="text-lg leading-5 font-semibold text-orange-400 dark:text-white">
      {title}
    </h3>
    <p class="text-lg font-medium text-gray-400 dark:text-white">
      {company}
    </p>
    <time
      class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
      >{date}</time
    >
  </div>
  <p class="flex-1 mb-4 text-sm font-normal text-gray-500 dark:text-gray-400 text-pretty">
    {description}
  </p>
</li>
