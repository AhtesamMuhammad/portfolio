<li class="relative mb-2 md:mb-6 flex-1">
  <div class="flex items-center">
    <div
      class="hidden z-10 md:flex items-center justify-center w-3 h-3 bg-orange-100 rounded-full ring-0 ring-white sm:ring-8 shrink-0"
    >
    </div>
    <div class="hidden md:flex w-full bg-gray-300/70 h-[1px]">
    </div>
  </div>
  <div class="mt-3">
    <h3 class="text-lg font-semibold text-orange-400">
      {title}
    </h3>
    <p class="mb-0.5 text-sm font-normal text-gray-300">
      {institute}
    </p>
    <time class="block mb-2 text-sm font-normal leading-none text-gray-400"
      >{date}</time
    >
    <p class="text-sm font-normal text-gray-500">
      {description}
    </p>
  </div>
