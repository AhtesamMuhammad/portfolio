<li class="relative mb-6 sm:mb-0 flex-1">
  <div class="flex items-center justify-center">
    <div
      class="z-10 flex items-center justify-center w-3 h-3 bg-orange-300 rounded-full ring-0 ring-white shrink-0"
    >
    </div>
    <div class="hidden sm:flex w-full bg-gray-300 h-[0.5px] dark:bg-gray-700"></div>
  </div>
  <div class="mt-3">
    <h3 class="text-lg font-bold text-orange-400 dark:text-white">
      {title}
    </h3>
    <p class="text-sm font-normal text-gray-400 dark:text-white">
      {institute}
    </p>
    <time
      class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
      >{date}</time
    >
    <p class="text-sm font-normal text-gray-500">
      {description}
    </p>
  </div>
</li>
