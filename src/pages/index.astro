---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import Plant from "../components/icons/Plant.astro";
import Code from "../components/icons/Code.astro";
import Css3 from "../components/icons/Css3.astro";
import Html5 from "../components/icons/Html5.astro";
import LinkButton from "../components/LinkButton.astro";
import Link from "../components/icons/Link.astro";
---

<Layout
  title="Ahtesam Porfolio - Web Developer and Full stack Programmer"
  description="Hire Ahtesam to build your web or mobile application. Web Developer and Full-Stack Developer, specialized in creating unique applications."
>
  <main class="mx-4">
    <SectionContainer>
      <div
        class="flex flex-col lg:flex-row md:flex-row gap-6 max-w-[35rem] md:max-w-max"
      >
        <img
          class="flex-none max-w-[150px] max-h-[150px] lg:max-w-[200px] lg:max-h-[200px] lg:order-2 md:order-2 w-full rounded-xl text-pretty"
          src="../../public/ahtesam-image.png"
          alt="Ahtesam Muhammad photo"
        />
        <div class="flex-1">
          <h1 class="text-3xl md:text-4xl font-bold flex gap-x-2 mb-2 ms:mb-4">
            Hey, I'm Ahtesam <Badge class="text-sm">Available for work</Badge>
          </h1>
          <p class="text-[1.25rem] text-wrap text-gray-600 mb-6">
            <span>+3 years of experience.</span>
            <span class="text-orange-400 font-medium"
              >Web Developer and Full stack Programmer.</span
            > From Barcelona, Spain ‚úàÔ∏è. Focused on designing websites that are truly
            one of a kind üë®‚Äçüíª.
          </p>
        </div>
      </div>
      <ul class="flex gap-x-4 flex-wrap gap-3">
        <li>
          <SocialPill
            class="text-orange-500 hover:bg-orange-500 hover:text-white"
            href="https://github.com/AhtesamMuhammad"
          >
            <GitHubIcon class="size-5" />
            GitHub
          </SocialPill>
        </li>
        <li>
          <SocialPill href="https://www.linkedin.com/in/ahtesamm/">
            <LinkedInIcon class="size-5" />
            LinkedIn
          </SocialPill>
        </li>
        <li>
          <SocialPill href="mailto:ahtesam.work@gmail.com">
            <MailIcon class="size-5" />
            ahtesam.work@gmail.com
          </SocialPill>
        </li>
      </ul>
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold flex items-center gap-4">
        <Plant class="size-8 font-bold" />
        Work experience
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer>
      <h2 class="text-3xl font-semibold flex gap-4 items-center mb-9">
        <Code class="size-8" />
        Projects
      </h2>
      <div class="flex flex-row gap-8">
        <div class="overflow-hidden flex-grow-2 rounded-lg ">
          <img
            class="w-full h-full object-cover object-left border hover:scale-105 transition duration-300"
            src="/public/imgs/omnifood-image.webp"
            alt="omnifood company that works with ia for deliver food"
          />
        </div>
        <div class="">
          <h3 class="mb-2 font-bold text-xl">
            Omnifood - Web of subscription of home delivered meals
          </h3>
          <ul class="flex gap-x-4 flex-wrap gap-3 mb-3">
            <li
              class="rounded-full flex items-center gap-2 border px-2 py-1 bg-orange-500 text-white text-[12px]"
            >
              <Html5 class="size-5" />
              HTML5
            </li>
            <li
              class="rounded-full flex items-center gap-2 border px-3 py-1 bg-blue-500 text-white text-[10px]"
            >
              <Css3 class="size-4" />
              CSS3
            </li>
          </ul>
          <p class="text-gray-600 mb-3">
            This project was created using HTML and CSS, leveraging both Grid
            and Flexbox for layout design. It includes responsive features and a
            functional call-to-action for a real-world feel.
          </p>
          <ul class="flex gap-4">
            <li>
              <LinkButton
                href="https://github.com/AhtesamMuhammad/frontend-development-practice/tree/main/omnifood-desktop"
              >
                <GitHubIcon class="size-5" />
                Code
              </LinkButton>
            </li>

            <li>
              <LinkButton href="https://omnifood-ahtesam.netlify.app/">
                <Link class="size-5" />
                Preview
              </LinkButton>
            </li>
          </ul>
        </div>
      </div>
      <SectionContainer />
    </SectionContainer>
  </main>
</Layout>
